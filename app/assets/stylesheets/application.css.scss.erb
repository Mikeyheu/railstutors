@font-face {
    font-family: 'BebasNeueRegular';
    src: url('<%= asset_path('BebasNeue-webfont.eot') %>');
    src: url('<%= asset_path('BebasNeue-webfont.eot?#iefix') %>') format('embedded-opentype'),
         url('<%= asset_path('BebasNeue-webfont.woff') %>') format('woff'),
         url('<%= asset_path('BebasNeue-webfont.ttf') %>') format('truetype'),
         url('<%= asset_path('BebasNeue-webfont.svg#BebasNeueRegular') %>') format('svg');
    font-weight: normal;
    font-style: normal;

}


$baseFontFamily: BebasNeueRegular, Helvetica, Arial, sans-serif !default;


@import "bootstrap";


ul {
	padding:0;
	margin: 0;
}

a:hover {
	text-decoration:none;
}

li {
	list-style: none;
}

.post_container {
	clear:both;
	height:60px;
}

.post_right {

}

.post_left {
	float:left;
	font-size:20px;
	text-align: center;
	width:50px;
	margin-right:20px;
}

.post_title {
	padding-top:8px;
	font-size:26px;
	font-weight:bold;
	margin-bottom:10px;
}

.arrow_up {
	font-size:30px;
	height:20px;
	a:link {
			text-decoration:none;
			color:#CC0000;
			font-size:30px;
		}
		a:visited {
			text-decoration:none;
			color:#CC0000;
			font-size:30px;
		}
}

.arrow_down {
	height:30px;
		a:link {
			text-decoration:none;
			color:#CC0000;
			font-size:30px;
		}
		a:visited {
			text-decoration:none;
			color:#CC0000;
			font-size:30px;
		}
	
}

.votes {
	font-size:24px;
	font-weight:bold;
	color: #aaa;
	height:26px;
}

.comment {
	font-size:30px;
	color:red;
	margin-bottom:-10px;
}

.post_comments {
	font-size:20px;
	color:dark-gray;
}

.post_comments i {
	padding-top:4px;
	font-size:24px;
	color:gray;
}



.navbar-inner {
	height:110px;
	background-color:#CC0000;
	background-image:none;
	padding:0;
}

.nav_menu {
	font-size:24px;
	color:#333;
	
	li {

		margin-right:10px;
		float:left;

		a {
			color:#333;
			text-decoration:none;
		}

		a:hover {
			color:#FFF;
		}
	}
}

.sign_in {
	font-size:20px;
	position:absolute;
	right:15px;
	top:10px;

	a {
		color:white;
		text-decoration:none;
	}
}

.logo_text {
	line-height:75px;
	font-size:60px;
	font-weight:bold;
	color:white;
}

.container {
	margin-left:20px;
}

