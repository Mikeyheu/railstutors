<%= link_to "<< Back to Index", posts_path %>

<h1> <%= link_helper(@post) %> </h1>

<h5>Leave a comment</h5>

<%= form_for [@post, @comment], :remote => true do |f| %>
	<%= f.text_area :content, cols: 50, rows: 3 %></br>
	<%= f.submit "Submit" %>
<% end %>

<div id="comments">
	<%= render 'comments' %>
</div>